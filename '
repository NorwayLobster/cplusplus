#include <cstring>
#include <cstdio>
#include <cstdlib>
#include <iostream>
#include <string>
using std::cout;
using std::endl;
using std::string;
using bool;
int main(void)
{
	char a[]="hello";
	char b[]=", world";
	//1,strcat()
	int length =::strlen(a)+::strlen(b);
	char *p= static_cast<char*>(::calloc(0,length+1));
	::strcpy(p,a);
	::strcat(p,b);
	::printf("%s\n",p);
	for(int idx=0;idx<length;++idx)
	{
		if(idx<length-1)
			printf("%c ",p[idx]);
		else 
			printf("%c\n",p[idx]);

	}
		
	//c++
	string a="hello";
	string b=", world";
	string c= a+c;
	bool A;
	if a==b
		A=1;
	else 
		A=0;
	cout<<"A="<<A<<endl;





	return 0;
}
